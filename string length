#include<stdio.h>
#include<string.h>
void len_string(char *p)
{
    int count=0;
    while(*p!='\0')
    {
        p++;
        count++;
    }
    printf("\n length of the concatenated string is:%d",count);
}
int main()
{
    char s1[20],s2[20];//declaring two array og characters with size 20
    printf("enter first string: \n");
    scanf("%s",s1);//reading string 1 from user
    printf("enter second string: \n");
    scanf("%s",s2);//reading string 2 from user
    strcat(s1,s2);//concatenation of 2 srtings using concatination fuction
    printf("string concatenation:%s",s1);
    len_string(s1);//calling a function
}
